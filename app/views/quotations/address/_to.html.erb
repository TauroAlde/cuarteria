<%= form.fields_for :address_to do |address_to| %>
  <div class="form-group">
    <h3>Destino</h3>
  </div>
  <div class="form-group">
    <label for="country_code">Código de País</label>
    <%= address_to.text_field :country_code, class: "form-control", placeholder: "Ingrese código de país" %>
  </div>
  <div class="form-group">
    <label for="postal_code">Código Postal</label>
    <%= address_to.text_field :postal_code, class: "form-control", placeholder: "Ingrese código postal" %>
  </div>
  <div class="form-group">
    <label for="area_level1">Nivel de Área 1</label>
    <%= address_to.text_field :area_level1, class: "form-control", placeholder: "Ingrese nivel de área 1" %>
  </div>
  <div class="form-group">
    <label for="area_level2">Nivel de Área 2</label>
    <%= address_to.text_field :area_level2, class: "form-control", placeholder: "Ingrese nivel de área 2" %>
  </div>
  <div class="form-group">
    <label for="area_level3">Nivel de Área 3</label>
    <%= address_to.text_field :area_level3, class: "form-control", placeholder: "Ingrese nivel de área 3" %>
  </div>
  <div class="form-group">
    <label for="street1">Calle 1</label>
    <%= address_to.text_field :street1, class: "form-control", placeholder: "Ingrese calle 1" %>
  </div>
  <div class="form-group">
    <label for="apartment_number">Número de Apartamento</label>
    <%= address_to.text_field :apartment_number, class: "form-control", placeholder: "Ingrese número de apartamento" %>
  </div>
  <div class="form-group">
    <label for="reference">Referencia</label>
    <%= address_to.text_field :reference, class: "form-control", placeholder: "Ingrese referencia" %>
  </div>
  <div class="form-group">
    <label for="name">Nombre</label>
    <%= address_to.text_field :name, class: "form-control", placeholder: "Ingrese nombre" %>
  </div>
  <div class="form-group">
    <label for="company">Compañía</label>
    <%= address_to.text_field :company, class: "form-control", placeholder: "Ingrese compañía" %>
  </div>
  <div class="form-group">
    <label for="phone">Teléfono</label>
    <%= address_to.text_field :phone, class: "form-control", placeholder: "Ingrese teléfono" %>
  </div>
  <div class="form-group">
    <label for="email">Correo Electrónico</label>
    <%= address_to.text_field :email, class: "form-control", placeholder: "Ingrese correo electrónico" %>
  </div>
<% end %>
