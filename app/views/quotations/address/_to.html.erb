<%= form.fields_for :address_to do |address_to| %>
  <div class="form-group">
    <h3>Destino</h3>
  </div>
  <div class="form-group">
    <label for="country_code">Código de País <span class="text-danger">*</span></label>
    <%= address_to.text_field :country_code, class: "form-control", placeholder: "Ingrese código de país", required: true %>
  </div>
  <div class="form-group">
    <label for="postal_code">Código Postal <span class="text-danger">*</span></label>
    <%= address_to.text_field :postal_code, class: "form-control", placeholder: "Ingrese código postal", required: true %>
  </div>
  <div class="form-group">
    <label for="area_level1">Nivel de Área 1 <span class="text-danger">*</span></label>
    <%= address_to.text_field :area_level1, class: "form-control", placeholder: "Ingrese nivel de área 1", required: true %>
  </div>
  <div class="form-group">
    <label for="area_level2">Nivel de Área 2 <span class="text-danger">*</span></label>
    <%= address_to.text_field :area_level2, class: "form-control", placeholder: "Ingrese nivel de área 2", required: true %>
  </div>
  <div class="form-group">
    <label for="area_level3">Nivel de Área 3 <span class="text-danger">*</span></label>
    <%= address_to.text_field :area_level3, class: "form-control", placeholder: "Ingrese nivel de área 3", required: true %>
  </div>
  <div class="form-group">
    <label for="street1">Calle 1 <span class="text-danger">*</span></label>
    <%= address_to.text_field :street1, class: "form-control", placeholder: "Ingrese calle 1", required: true %>
  </div>
  <div class="form-group">
    <label for="apartment_number">Número de Apartamento</label>
    <%= address_to.text_field :apartment_number, class: "form-control", placeholder: "Ingrese número de apartamento" %>
  </div>
  <div class="form-group">
    <label for="reference">Referencia <span class="text-danger">*</span></label>
    <%= address_to.text_field :reference, class: "form-control", placeholder: "Ingrese referencia", required: true %>
  </div>
  <div class="form-group">
    <label for="name">Nombre <span class="text-danger">*</span></label>
    <%= address_to.text_field :name, class: "form-control", placeholder: "Ingrese nombre", required: true %>
  </div>
  <div class="form-group">
    <label for="company">Compañía <span class="text-danger">*</span></label>
    <%= address_to.text_field :company, class: "form-control", placeholder: "Ingrese compañía", required: true %>
  </div>
  <div class="form-group">
    <label for="phone">Teléfono <span class="text-danger">*</span></label>
    <%= address_to.text_field :phone, class: "form-control", placeholder: "Ingrese teléfono", required: true %>
  </div>
  <div class="form-group">
    <label for="email">Correo Electrónico <span class="text-danger">*</span></label>
    <%= address_to.text_field :email, class: "form-control", placeholder: "Ingrese correo electrónico", required: true %>
  </div>
<% end %>
