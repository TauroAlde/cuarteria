<div class="container">
  <div class="row">
    <div class="col">
      <% if flash[:notice] %>
        <div class="alert alert-success" id="notice-alert">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger" id="alert-alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <h1>Quotation</h1>
      <div class="container mt-5">
        <div class="row">
          <div class="col-lg-12">
            <button type="button" class="btn btn-light">
              <a class="nav-link active" aria-current="page" href="<%= dashboard_index_path %>">
                Back
              </a>
            </button>
          </div>
          <div class="col-lg-12">
            <!-- Quotation-->
            <div class="col-lg-12 pb-5">
                <%= form_for(:quotation, url: new_quotation_path, method: :get) do |form| %>
                <div class="row">
                  <div class="col-md-6 p-2">
                    <%= render 'quotations/address/from', form: form %>
                  </div>
                  <div class="col-md-6 p-2">
                    <%= render 'quotations/address/to', form: form %>
                  </div>
                  <div class="col-md-12 p-2">
                    <%= form.fields_for :parcels do |parcel| %>
                      <div class="form-group">
                        <%= parcel.label :height, "Alto" %><span class="text-danger">*</span>
                        <%= parcel.text_field :height, class: "form-control", placeholder: "Ingrese alto", required: true %>
                      </div>
                      <div class="form-group">
                        <%= parcel.label :length, "Largo" %><span class="text-danger">*</span>
                        <%= parcel.text_field :length, class: "form-control", placeholder: "Ingrese largo", required: true %>
                      </div>
                      <div class="form-group">
                        <%= parcel.label :width, "Ancho" %><span class="text-danger">*</span>
                        <%= parcel.text_field :width, class: "form-control", placeholder: "Ingrese ancho", required: true %>
                      </div>
                      <div class="form-group">
                        <%= parcel.label :weight, "Peso" %><span class="text-danger">*</span>
                        <%= parcel.text_field :weight, class: "form-control", placeholder: "Ingrese peso", required: true %>
                      </div>
                      <div class="form-group">
                        <%= parcel.label :quantity, "Cantidad de paquetes" %><span class="text-danger">*</span>
                        <%= parcel.text_field :quantity, class: "form-control", placeholder: "Ingrese cantidad", required: true %>
                      </div>
                    <% end %>
                  </div>
                  <hr class="mt-2 mb-3">
                  <div class="col-6">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                      <%= form.submit "Cotizar", class: "btn btn-light" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

