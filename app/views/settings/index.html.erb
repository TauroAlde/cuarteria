<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <button type="button" class="btn btn-light">
        <a class="nav-link active" aria-current="page" href="<%= dashboard_index_path %>">
          Back
        </a>
      </button>
    </div>
    <div class="col-lg-12">
      <% if @settings.present? %>
        <% @settings.each do |setting| %>
          <div class="container mt-5">
            <div class="row">
              <div class="col-lg-12">
                <!-- Quotation index-->
                <div class="col-lg-12 pb-5">
                  <div class="row">
                    <div class="col-md-6 p-2">
                      <div class="form-group">
                        <label for="account-fn">App Name</label>
                        <p class="form-control" id="account-fn"><%= setting.app_name %></p>
                      </div>
                    </div>
                    <div class="col-md-6 p-2">
                      <div class="form-group">
                        <label for="account-email">Api Key</label>
                        <p class="form-control" id="account-email"><%= setting.api_key %></p>
                      </div>
                    </div>
                    <div class="col-md-6 p-2">
                      <div class="form-group">
                        <label for="account-pass">Secret Key</label>
                        <p class="form-control" id="account-pass" plac><%= setting.secret_key %></p>
                      </div>
                    </div>
                    <div class="col-md-6 p-2">
                      <div class="form-group">
                        <label for="account-confirm-pass">Token</label>
                        <p class="form-control" id="account-confirm-pass"><%= setting.token.present? ? setting.token : "******" %></p>
                      </div>
                    </div>
                    <div class="col-12">
                      <hr class="mt-2 mb-3">
                      <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <button type="button" class="btn btn-light">
                          <a class="nav-link active" aria-current="page" href="<%=  %>">
                            Edit User
                          </a>
                        </button>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <button type="button" class="btn btn-light">
                          <a class="nav-link active" aria-current="page" href="<%= new_setting_path %>">
                            Agregar configuración
                          </a>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
      <% else %>
        <div class="col-12">
          <div class="d-flex flex-wrap justify-content-between align-items-center">
                No tienes ningun configuración
          </div>
        </div>
        <div class="col-12">
          <div class="d-flex flex-wrap justify-content-between align-items-center">
            <button type="button" class="btn btn-light">
              <a class="nav-link active" aria-current="page" href="<%= new_setting_path %>">
                Agregar configuración
              </a>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
