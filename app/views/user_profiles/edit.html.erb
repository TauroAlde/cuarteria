<div class="container mt-5">
  <div class="row">
    <div class="col-lg-12">
      <!-- Profile Settings-->
      <div class="col-lg-12 pb-5">
        <%= form_with(model: @user, url: user_profile_path, local: true) do |form| %>
          <div class="row">
            <div class="col-md-6 p-2">
              <div class="form-group">
                <label for="account-fn">Name</label>
                <%= form.text_field :name, class: "form-control", id: "account-fn", required: true %>
              </div>
            </div>
            <div class="col-md-6 p-2">
              <div class="form-group">
                <label for="account-email">E-mail Address</label>
                <%= form.email_field :email, class: "form-control", id: "account-email" %>
              </div>
            </div>
            <div class="col-md-6 p-2">
              <div class="form-group">
                <label for="account-pass">New Password</label>
                <%= form.password_field :password, class: "form-control", id: "account-pass" %>
              </div>
            </div>
            <div class="col-md-6 p-2">
              <div class="form-group">
                <label for="account-confirm-pass">Confirm Password</label>
                <%= form.password_field :password_confirmation, class: "form-control", id: "account-confirm-pass" %>
              </div>
            </div>
            <div class="col-12">
              <hr class="mt-2 mb-3">
              <div class="d-flex flex-wrap justify-content-between align-items-center">
                <%= form.submit "Edit user", class: "btn btn-style-1 btn-primary", data: { toast: "", toast_position: "topRight", toast_type: "success", toast_icon: "fe-icon-check-circle", toast_title: "Success!", toast_message: "Your profile updated successfully." } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-lg-12">
        <button type="button" class="btn btn-info">
          <a class="nav-link active" aria-current="page" href="<%= user_profiles_path %>">
            Back
          </a>
        </button>
      </div>
    </div>
  </div>
</div>
