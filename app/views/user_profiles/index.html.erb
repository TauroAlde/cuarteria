<div class="container mt-5">
  <div class="row">
    <div class="col-lg-12">
      <!-- Profile Settings-->
      <div class="col-lg-12 pb-5">
        <div class="row">
          <div class="col-md-6 p-2">
            <div class="form-group">
              <label for="account-fn">Name</label>
              <p class="form-control" id="account-fn"><%= @user.name %></p>
            </div>
          </div>
          <div class="col-md-6 p-2">
            <div class="form-group">
              <label for="account-email">E-mail Address</label>
              <p class="form-control" id="account-email"><%= @user.email %></p>
            </div>
          </div>
          <div class="col-md-6 p-2">
            <div class="form-group">
              <label for="account-pass">Password</label>
              <p class="form-control" id="account-pass" plac>**********</p>
            </div>
          </div>
          <div class="col-md-6 p-2">
            <div class="form-group">
              <label for="account-confirm-pass">Confirm Password</label>
              <p class="form-control" id="account-confirm-pass">********</p>
            </div>
          </div>
          <div class="col-12">
            <hr class="mt-2 mb-3">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
              <button type="button" class="btn btn-style-1 btn-primary">
                <a class="nav-link active" aria-current="page" href="<%= edit_user_profile_path(@user.id) %>">
                  Edit User
                </a>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-12">
        <button type="button" class="btn btn-info">
          <a class="nav-link active" aria-current="page" href="<%= dashboard_index_path %>">
            Back
          </a>
        </button>
      </div>
      </div>
    </div>
  </div>
</div>
